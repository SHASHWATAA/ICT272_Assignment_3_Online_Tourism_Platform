@model IEnumerable<ICT272_Assignment_3_Online_Tourism_Platform.Models.GuidedTourBooking>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuidedToursDate.GuidedTours.Title)
            </th>
            <th>
                Tour Guide
            </th>
            <th>
                Booking Date
            </th>
            <th>
                Booking Made
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuidedToursDate.GuidedTours.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuidedToursDate.TourGuideAgency.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuidedToursDate.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
