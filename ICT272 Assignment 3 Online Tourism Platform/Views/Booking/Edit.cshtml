@model ICT272_Assignment_3_Online_Tourism_Platform.Models.Booking

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TouristId" class="control-label"></label>
                <select asp-for="TouristId" class="form-control" asp-items="ViewBag.TouristId"></select>
                <span asp-validation-for="TouristId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelPackageId" class="control-label"></label>
                <select asp-for="TravelPackageId" class="form-control" asp-items="ViewBag.TravelPackageId"></select>
                <span asp-validation-for="TravelPackageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PaymentReceived" /> @Html.DisplayNameFor(model => model.PaymentReceived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

